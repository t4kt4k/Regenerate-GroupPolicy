# Chemin vers le fichier de logs
$cheminLogs = "C:\Chemin\vers\le\fichier\logs.txt"

# Renommer un dossier et écrire les logs
$ancienNom = "AncienNom"
$nouveauNom = "NouveauNom"
Rename-Item -Path "C:\Chemin\vers\le\dossier" -NewName $nouveauNom
$logs = "Le dossier $ancienNom a été renommé en $nouveauNom à $(Get-Date)."
Add-Content -Path $cheminLogs -Value $logs

# Afficher "Bonjour" et écrire les logs
Write-Host "Bonjour"
$logs = "Bonjour a été affiché à $(Get-Date)."
Add-Content -Path $cheminLogs -Value $logs

# Boîte de dialogue pour redémarrer et écrire les logs
$reponse = [System.Windows.Forms.MessageBox]::Show("Voulez-vous redémarrer l'ordinateur ?", "Redémarrage", [System.Windows.Forms.MessageBoxButtons]::YesNo)
if ($reponse -eq "Yes") {
    Restart-Computer
    $logs = "L'ordinateur a été redémarré à $(Get-Date)."
    Add-Content -Path $cheminLogs -Value $logs
} else {
    $logs = "L'utilisateur a choisi de ne pas redémarrer l'ordinateur à $(Get-Date)."
    Add-Content -Path $cheminLogs -Value $logs
}
